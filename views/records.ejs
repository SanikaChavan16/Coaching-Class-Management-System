<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Records</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to bottom, #a0c4ff, #ffffff);
            text-align: center;
            padding: 20px;
        }
        .container {
            max-width: 900px;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
        }
        h2 {
            color: #003366;
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
        }
        th {
            background-color: #003366;
            color: white;
        }
        .btn {
            padding: 8px 12px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 14px;
        }
        .view-btn {
            background-color: #28a745;
            color: white;
        }
        .delete-btn {
            background-color: #dc3545;
            color: white;
        }
        .back-btn {
            display: block;
            width: 200px;
            margin: 20px auto;
            padding: 12px;
            background-color: #003366;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            text-align: center;
        }
        .back-btn:hover {
            background-color: #002244;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Registered Students</h2>
        <table>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Course</th>
                <th>Course Fees</th>
                <th>Paid Fees</th>
                <th>Actions</th>
            </tr>
            <% students.forEach(student => { %>
            <tr>
                <td><%= student.name %></td>
                <td><%= student.email %></td>
                <td><%= student.phone %></td>
                <td><%= student.course || 'N/A' %></td>  <!-- Handle missing course -->
                <td>₹<%= student.courseFees || 0 %></td> <!-- Ensure it shows 0 if missing -->
                <td>₹<%= student.paidFees || 0 %></td>
                <td>
                    <a href="/students/view/<%= student._id %>">View</a> | 
                    <form action="/students/delete/<%= student._id %>" method="POST" style="display:inline;">
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this student?');">Delete</button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </table>
        <button class="back-btn" onclick="window.location.href='/dashboard'">Back to Dashboard</button>
    </div>
</body>
</html>
